* {
	margin: 0;
}

html {
	height: 100%;
	color: gray;
	font-family: "Helvetica Neue", "Helvetica", Arial, Verdana, sans-serif;
	font-size: 18px;
	line-height: 32px;
}

body {
	background-color: #fff;
	background-image: url(../img/stripes.gif);
	background-repeat: repeat;
	height: 100%;
}

#nav {
	top: 0px;
	height: 65px;
	width: 100%;
	background-color: #FFFFFF;
	z-index: 1;
	position: fixed;
	box-shadow: 0px 2px 2px #888888;
}

a.order:link, a.order:visited {
	font-size: 16px;
	float: right;
	text-decoration: none;
	color: #21749A;
	padding: 20px;
}

a.order:hover {
	color: #5BC0F5;
}

h1 {
	font-size: 2em;
}

#container {
	width: 100%;
	height: 100%;
	min-height: 100%;
	height: auto !important;
	margin: 0 auto -50px; /* the bottom margin is the negative value of the footer's height */
	margin-top: 65px;
}

#logo {
	margin-top: 8px;
	margin-left: 12px;
}

#map_canvas {
	float: left;
	width: 60%;
	min-width: 200px;
	height:400px;
	display: inline;
}

#inputbox {
	float: right;
	width: 40%;
	min-width: 200px;
	height: 400px;
	display: block;
	background-color: #21749A;
}

#guide {
	width: 60%;
	min-width: 200px;
	height:200px;
	font-size: 14px;
	line-height: 18px;
	word-wrap: normal;
}

#inst {
	text-align: left;
	display: inline;
}

#savedLocs {
	float: right;
	display: inline;
	width: 40%;
	min-width: 200px;
	height: 300px;
	background-color: #5FC0FA;
}

label {
	padding: 0 4px 2px;
	font-size: 14px;
	text-decoration: none;
	color: #fff;
	background: #00a6fc;
}


/* -----------------------------------------
   Standard Forms
----------------------------------------- */

input {
	background-color: white;
	border-bottom-color: grey;
	border-bottom-width: thin;
	color: white;
	margin-left: 5px;
	margin-left: 5px;
}

input.newLoc {
	background-color: #21749A;
	border: none;
	font-size: 32px;
	color: white;
}

.day, .week, .time, .print {
	color: white;
	padding: 4px;
	margin: 2px;
}

.button {
	background: #00a6fc;
	display: inline-block;
	text-align: center;
	padding: 9px 34px 11px;
	color: #fff;
	text-decoration: none;
	font-weight: bold;
	font-size: 13px; font-size: 1.3rem;
	line-height: 1;
	position: relative;
	cursor: pointer;
	border: none;
	outline: none;
}

.redbutton {
	background: #e91c21;
	display: inline-block;
	text-align: center;
	padding: 9px 34px 11px;
	color: #fff;
	text-decoration: none;
	font-weight: bold;
	font-size: 13px; font-size: 1.3rem;
	line-height: 1;
	position: relative;
	cursor: pointer;
	border: none;
	outline: none;
}

.button:hover,.button:focus	{ 
	background-color: #0192dd;
}

.redbutton:hover, .redbutton:focus {
	background-color: #d01217;
}

a.url:link, a.url:visited {
	color: black;
	text-decoration: none;
} 

a.url:hover {
	color: #4DBF39;
}

.footer {
	height: 50px;
	padding: 20px;
	margin: 0px auto;
	font-size: 13px;
	background-color: black;
	position: relative;
	text-align: center;
}

a:link, a:visited {
	color: white;
	text-decoration: none;
} 

a:hover {
	color: #00A6FC;
	text-decoration: none;
}
